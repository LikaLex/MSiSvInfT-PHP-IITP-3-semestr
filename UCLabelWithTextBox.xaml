<UserControl x:Class="MSiSvInfT.UCLabelWithTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MSiSvInfT">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="Caption" Grid.Column="0" Content="Caption"/>
        <TextBox x:Name="Text" Grid.Column="1" BorderThickness="0" VerticalContentAlignment="Center" IsReadOnly="True"/>
    </Grid>
</UserControl>
